{
  "name": "mdview",
  "version": "1.6.0",
  "description": "Standalone Markdown Viewer",
  "keywords": [
    "markdown",
    "md",
    "viewer",
    "standalone"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/c3er/mdview.git"
  },
  "author": "Christian Dreier",
  "license": "MIT",
  "main": "app/main.js",
  "bugs": {
    "url": "https://github.com/c3er/mdview/issues"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "electron-builder",
    "test": "prettier --check . && mocha --timeout 20000",
    "format": "prettier --write ."
  },
  "build": {
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "shortcutName": "Markdown Viewer"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "mac": {
      "target": [
        "default"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "icon/md.ico"
    },
    "fileAssociations": [
      {
        "name": "Markdown file",
        "ext": ".md",
        "icon": "icon/md.ico"
      },
      {
        "name": "Markdown file",
        "ext": ".markdown",
        "icon": "icon/md.ico"
      }
    ]
  },
  "dependencies": {
    "@electron/remote": "1.1.0",
    "github-markdown-css": "4.0.0",
    "github-markdown-dracula-css": "4.0.3",
    "highlight.js": "10.7.2",
    "iconv-lite": "0.6.3",
    "markdown-it": "12.0.6",
    "markdown-it-headinganchor": "1.3.0"
  },
  "devDependencies": {
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "electron": "13.0.1",
    "electron-builder": "22.10.5",
    "mocha": "8.4.0",
    "prettier": "2.3.0",
    "spectron": "15.0.0",
    "spectron-menu-addon-v2": "1.0.1",
    "tslib": "2.2.0"
  }
}
